{
  "name": "trinity/settings",
  "description": "Trinity Settings bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Trinity Team",
      "email": "info@modpreneur.com"
    }
  ],

  "require": {
    "php": ">=7.1",
    "doctrine/orm": "~2.5",
    "symfony/http-kernel": "~2.8|~3.0",
    "symfony/dependency-injection": "~2.8|~3.0",
    "symfony/config": "~2.8|~3.0",
    "twig/twig": "~1.20|~2.0",
    "twig/extensions" : "~1.3"
  },

  "require-dev": {
      "doctrine/doctrine-bundle": "~1.6",
      "symfony/var-dumper": "~3.0",
      "symfony/browser-kit": "~2.8|~3.0",
      "symfony/form": "~3",
      "symfony/validator": "~3",
      "symfony/twig-bundle": "~2.8|~3.0",
      "mockery/mockery": "~0.9",
      "fzaninotto/faker": "~1.5",
      "satooshi/php-coveralls" : "~1",
      "phpunit/phpunit": "~6",
      "phpstan/phpstan": "~0.7"
  },

  "autoload": {
    "psr-4": {
      "Trinity\\Bundle\\SettingsBundle\\": ""
    },
    "psr-0": {
      "Tests": "Tests/"
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "minimum-stability": "stable",
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },

  "archive": {
    "exclude": ["/docker", "/Tests", "docker-compose.yml", "Dockerfile", "entrypoint.php", "entrypoint.sh", "phpunit.xml"]
  },
  
   "scripts": {

  }
  
}
